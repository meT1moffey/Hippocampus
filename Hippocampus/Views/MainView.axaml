<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="300"
             x:Class="Hippocampus.Views.MainView">
	<StackPanel Spacing="10">
		<TextBox AcceptsReturn="False" Text="{Binding FilePath}" Watermark="File path"/>
		<TextBox AcceptsReturn="False" Text="{Binding Key}" Watermark="Key" PasswordChar="*"/>
		<StackPanel Orientation="Horizontal" Spacing="20">
			<RadioButton IsChecked="True" GroupName="Output" Content="Show" Command="{Binding LabelSelected}"/>
			<RadioButton GroupName="Output" Content="Write into file" Command="{Binding FileSelected}"/>
		</StackPanel>
		<Button Command="{Binding Launch}">Launch</Button>
		<TextBlock Text="{Binding LabelOutput}" TextWrapping="Wrap"/>
	</StackPanel>
</UserControl>
